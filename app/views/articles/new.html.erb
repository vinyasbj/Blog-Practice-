<%= form_for @article do |f| %>
	<br>
	<h3>Enter the Article details </h3>
	<%if @article.errors.any? %>
	<h3>Errors</h3>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
		<li> <%=msg %> </li>
		<% end %>
	</ul>
	<% end %>
	<%= f.label :category_id, "Category_Id" %><br>
	<%= f.collection_select :category_id,Category.all, :id ,:name,prompt: "select Category" %>
	<br> 
	<br>
	<%= f.label :title, "Title" %><br>
	<%= f.text_field :title %> <br>
	<br>
	<%= f.label :body, "Body" %><br>
	<%= f.text_area :body ,rows: 10 ,cols: 100%>
	<br>
	<br>
	<%= f.label :publish_date, "Publisher_Date" %>
	<br>
	<br>
	<%= f.datetime_select :publish_date %>
	<br>
	<br>
	<%= f.submit "Submit" %>
	<br>
<% end %>
